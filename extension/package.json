  "description": "Privacy-first AI coding agent using local LLMs",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "main": "./dist/extension.js",
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --platform=node --external:vscode --format=cjs",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.27.1",
    "vitest": "^4.0.15"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "localpilot",
